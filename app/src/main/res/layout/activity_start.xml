<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zip_code"
        android:layout_marginRight="@dimen/text_margin_top"
        android:layout_marginLeft="@dimen/text_margin_top"
        android:layout_marginTop="@dimen/text_margin"
        android:hint="@string/enter_the_zipcode"
        android:textSize="@dimen/start_text_size"
        android:inputType="number"
        android:maxLength="5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_info"
        style="@android:style/Widget.Button"
        android:layout_marginRight="@dimen/text_margin_top"
        android:layout_marginLeft="@dimen/text_margin_top"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/get_info"
        android:textAlignment="center"
        android:textSize="@dimen/start_text_size"
        />

</LinearLayout>
</layout>